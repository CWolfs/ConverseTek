{
    "compilerOptions": {
       "target": "esnext",
       "moduleResolution": "node",
       "module": "commonjs",
       "rootDir": ".",
       "resolveJsonModule": true,
       "esModuleInterop": true,
       "forceConsistentCasingInFileNames": true,
       "strict": true,
       "noImplicitAny": true,
       "skipLibCheck": true,
       "allowJs": true,
       "declaration": true,
       "emitDeclarationOnly": true,
       "isolatedModules": true
    }
  }