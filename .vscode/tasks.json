{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Release",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "--configuration",
        "Release",
        "${workspaceFolder}/ConverseTek.csproj",
        "/t:BuildRelease"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build All",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/ConverseTek.csproj",
        "/t:BuildDebug"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build Server",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/ConverseTek.csproj",
        "/t:BuildServer"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "UI Install",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "UI Build",
      "type": "shell",
      "command": "npm run build --prefix app && xcopy /y /e /i dist ${workspaceFolder}\\bin\\x64\\Debug\\net472\\dist",
      "windows": {
          "command": "cmd",
          "args": [
              "/C",
              "npm run build --prefix app && xcopy /y /e /i dist ${workspaceFolder}\\bin\\x64\\Debug\\net472\\dist"
          ]
      },
      "presentation": {
          "reveal": "always"
      },
      "group": {
          "kind": "build",
          "isDefault": true
      }
    },
    {
      "label": "Fast Run",
      "command": "${workspaceFolder}/bin/x64/Debug/net472/ConverseTek.exe",
      "type": "shell"
    },
    {
      "label": "UI-Only Run",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/app/"
      },
      "type": "shell"
    }
  ]
}
